# Production Environment Configuration Example
# Copy this file to .env in production and update with your actual values

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=production
SECRET_KEY=your-super-secret-production-key-here

# Database Configuration with Connection Pooling
DATABASE_URL=postgresql://username:password@localhost:5432/stll_production
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_RECYCLE=3600
DB_POOL_TIMEOUT=30
DB_ECHO=false

# Redis Configuration for Caching and Sessions
REDIS_URL=redis://localhost:6379/0
CACHE_TYPE=redis
SESSION_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300

# Performance and Monitoring
SQLALCHEMY_RECORD_QUERIES=true
SLOW_QUERY_THRESHOLD=0.5
PROMETHEUS_METRICS=true
HEALTH_CHECK_ENABLED=true

# Security Settings
CSRF_TIME_LIMIT=3600
SESSION_LIFETIME=1800
RATELIMIT_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=structured

# Monitoring and Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@example.com

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# File Upload Configuration
MAX_CONTENT_LENGTH=52428800  # 50MB
MEDIA_STORAGE_BACKEND=s3

# Amazon S3 Configuration (if using S3)
S3_BUCKET=your-s3-bucket-name
S3_REGION=us-east-1
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_PREFIX=property-media

# Admin User (for initial setup)
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=secure-admin-password
ADMIN_FIRST_NAME=System
ADMIN_LAST_NAME=Administrator

# Additional Production Settings
BASE_URL=https://yourdomain.com
PREFERRED_URL_SCHEME=https
SSL_REDIRECT=true

# Rate Limiting
RATELIMIT_STRATEGY=fixed-window

# Notification Settings
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SMS_ENABLED=true
NOTIFICATION_REMINDER_HOURS=24

# Authentication Settings
AUTH_USE_SSO=false
AUTH_USE_LOCAL=true 