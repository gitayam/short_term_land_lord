{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "types": ["@cloudflare/workers-types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./functions/*"]
    }
  },
  "include": [
    "functions/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "venv"
  ]
}
